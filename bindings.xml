<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE bindings>
<bindings xmlns="http://www.mozilla.org/xbl">
    <binding id="close-tab-double">
        <handlers>
            <handler event="dblclick">
                gBrowser.removeCurrentTab();
            </handler>
        </handlers>
    </binding>
    <binding id="close-tab-triple">
        <handlers>
            <handler event="click">
                if (event.detail === 3) {
                    gBrowser.removeCurrentTab();
                }
            </handler>
        </handlers>
    </binding>
</bindings>
